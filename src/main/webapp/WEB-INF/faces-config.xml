<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>startpage</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/secure/mainpage/editMainpage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/secure/mainpage/editMainpage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/secure/club/editBoosterClub.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/public/club/boosterClub.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/secure/club/editBiberFriends.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/public/club/biberFriends.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/secure/about/editHistory.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/public/about/history.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/public/login/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/secure/profile/profile.xhtml</to-view-id>
            <redirect include-view-params="true">
                <redirect-param>
                    <name>memberId</name>
                    <value>#{userSessionBean.member.id}</value>
                </redirect-param>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/public/login/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>changePassword</from-outcome>
            <to-view-id>/secure/profile/changePassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/secure/admin/createSeason.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/secure/team/teamEditOverview.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/secure/admin/createSeason.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/secure/admin/editSponsors.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/secure/admin/editSponsors.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/secure/admin/editSponsors.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/public/about/contact.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>deans</from-outcome>
            <to-view-id>/public/club/deans.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/secure/report/reportEdit.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>removedReportImage</from-outcome>
            <to-view-id>/secure/report/reportEdit.xhtml</to-view-id>
            <redirect include-view-params="true">
                <redirect-param>
                    <name>reportId</name>
                    <value>#{reportBean.report.id}</value>
                </redirect-param>
            </redirect>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/secure/gallery/editGallery.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/secure/gallery/editGallery.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/secure/gallery/editAlbum.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/secure/gallery/editAlbum.xhtml</to-view-id>
            <redirect include-view-params="true">
                <redirect-param>
                    <name>albumId</name>
                    <value>#{albumBean.album.id}</value>
                </redirect-param>
            </redirect>
        </navigation-case>
    </navigation-rule>

    <application>
        <resource-bundle>
            <base-name>text.label</base-name>
            <var>label</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>text.pageLabels</base-name>
            <var>pageLabel</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>text.menu</base-name>
            <var>menu</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>text.textValues</base-name>
            <var>textValues</var>
        </resource-bundle>
        <resource-handler>org.omnifaces.resourcehandler.CombinedResourceHandler</resource-handler>
    </application>
</faces-config>