<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/secure/mainpage/editMainpage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/secure/mainpage/editMainpage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/public/login/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/secure/profile/profile.xhtml</to-view-id>
            <redirect include-view-params="true">
                <redirect-param>
                    <name>memberId</name>
                    <value>#{userSessionBean.member.id}</value>
                </redirect-param>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/public/login/login.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/secure/admin/createSeason.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/secure/team/teamEditOverview.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/secure/admin/createSeason.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <application>
        <resource-bundle>
            <base-name>text.label</base-name>
            <var>label</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>text.pageLabels</base-name>
            <var>pageLabel</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>text.menu</base-name>
            <var>menu</var>
        </resource-bundle>
    </application>
</faces-config>